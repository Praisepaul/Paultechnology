---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
---

<BaseLayout title="Contact | Paul Technologies">
  <Header />

  <main class="max-w-3xl mx-auto px-6 py-20">
    <h1 class="text-3xl font-bold mb-4">Talk to a Security Engineer</h1>

    <p class="text-gray-400 mb-10">
      Have a security concern, need an assessment, or want ongoing protection?
      Reach out and we’ll respond with clarity — not sales pressure.
    </p>

    <form
      action="https://formspree.io/f/mwvvvqlo"
      method="POST"
      class="space-y-6"
    >
      <!-- Honeypot -->
      <input type="text" name="_gotcha" class="hidden" />

      <div>
        <label class="block text-sm mb-1">Name</label>
        <input
          type="text"
          name="name"
          required
          class="w-full bg-surface border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:border-primary"
        />
      </div>

      <div>
        <label class="block text-sm mb-1">Email</label>
        <input
          type="email"
          name="email"
          required
          class="w-full bg-surface border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:border-primary"
        />
      </div>

      <div>
        <label class="block text-sm mb-1">Company (optional)</label>
        <input
          type="text"
          name="company"
          class="w-full bg-surface border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:border-primary"
        />
      </div>

      <div>
        <label class="block text-sm mb-1">Service of Interest</label>
        <select
          name="service"
          class="w-full bg-surface border border-gray-700 rounded-md px-4 py-2"
        >
          <option>Vulnerability Management</option>
          <option>Endpoint Security</option>
          <option>Blue Team Operations</option>
          <option>Incident Response</option>
          <option>General Inquiry</option>
        </select>
      </div>

      <div>
        <label class="block text-sm mb-1">Message</label>
        <textarea
          name="message"
          rows="5"
          required
          class="w-full bg-surface border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:border-primary"
        ></textarea>
      </div>

      <button
        type="submit"
        class="bg-primary text-black px-6 py-3 rounded-md font-medium"
      >
        Send Secure Message
      </button>
    </form>
  </main>
</BaseLayout>
