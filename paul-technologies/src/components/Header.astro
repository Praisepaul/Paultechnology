---
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-50 backdrop-blur border-b border-gray-800">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">

    <!-- Brand -->
    <a href="/" class="font-bold text-lg leading-tight">
      Paul Technologies
      <span class="block text-xs text-gray-400">
        Protect. Detect. Respond.
      </span>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-8 text-sm">
      <a href="/" class="hover:text-white">Home</a>
      <a href="/services/vulnerability-management" class="hover:text-white">Services</a>
      <a href="/contact" class="hover:text-white">Contact</a>

      <a
        href="/contact"
        class="ml-4 bg-[color:var(--primary)] text-black px-4 py-2 rounded-md font-medium"
      >
        Talk to a Security Engineer
      </a>
    </nav>

    <!-- Controls -->
    <div class="flex items-center gap-4 md:hidden">
      <ThemeToggle />
      <button id="menu-btn" aria-label="Open menu">â˜°</button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-800 bg-black">
    <nav class="flex flex-col px-6 py-6 gap-4 text-sm">
      <a href="/">Home</a>
      <a href="/services/vulnerability-management">Services</a>
      <a href="/contact">Contact</a>
    </nav>
  </div>

  <script>
    const btn = document.getElementById('menu-btn');
    const menu = document.getElementById('mobile-menu');
    btn?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  </script>
</header>
